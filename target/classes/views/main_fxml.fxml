<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.anrikot.controllers.MainController" stylesheets="@../styles/dark-theme.css">

    <Label text="Type the kanji you want to search" fx:id="titleLabel"/>
    <TextField fx:id="searchField" promptText="Enter kanji..."/>

    <HBox spacing="10">
        <Button text="Search" fx:id="searchButton" onAction="#onSearch"/>
        <Button text="Add" fx:id="addButton" onAction="#onAdd"/>
    </HBox>

    <TextArea fx:id="outputArea" editable="false" prefRowCount="6" wrapText="true" VBox.vgrow="ALWAYS"/>
    
</VBox>
